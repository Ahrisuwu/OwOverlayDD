<UserControl x:Class="OwOverlayDD.NoteBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OwOverlayDD"
             mc:Ignorable="d">
	<Border BorderThickness="1" DockPanel.Dock="Bottom" HorizontalAlignment="Right" BorderBrush="Black">
		<Border BorderThickness="1" Background="#AA000000">
			<Border.BorderBrush>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="#FF1B1B1B" Offset="1"/>
					<GradientStop Color="#FF484848" Offset="0"/>
				</LinearGradientBrush>
			</Border.BorderBrush>

			<StackPanel x:Name="lineStackPane">
				<local:AutoCompleteTextBox/>
			</StackPanel>
		</Border>
	</Border>
</UserControl>
