<UserControl x:Class="OwOverlayDD.ItemCounter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OwOverlayDD"
             mc:Ignorable="d">

	<StackPanel>
		<Image x:Name="image" d:Source="/Images/Items/Antivenom.png" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Source="{Binding Source}" MouseLeftButtonDown="image_MouseLeftButtonDown" MouseRightButtonDown="image_MouseRightButtonDown" MouseDown="image_MouseDown"/>
		<Border Width="28" Height="28">
			<Border.RenderTransform>
				<TransformGroup>
					<ScaleTransform/>
					<SkewTransform/>
					<RotateTransform/>
					<TranslateTransform Y="-16"/>
				</TransformGroup>
			</Border.RenderTransform>
			<Border.Background>
				<ImageBrush ImageSource="/Images/Circle.png" Stretch="Uniform"/>
			</Border.Background>

			<TextBlock x:Name="counter" Panel.ZIndex="2" Padding="0" Margin="0 0 0 1" Text="0" TextAlignment="Center" Foreground="#FFD2D2D2" FontWeight="Bold" FontFamily="Caladea" FontSize="16" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
		</Border>

	</StackPanel>
</UserControl>
