<Application x:Class="OwOverlayDD.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OwOverlayDD"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
		<Style TargetType="TextBox">
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="MinWidth" Value="100"/>
			<Setter Property="MaxWidth" Value="400"/>

			
			<Setter Property="FontFamily" Value="Caladea"/>
			<Setter Property="FontSize" Value="16"/>
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="TextAlignment" Value="Right"/>
			
			<Setter Property="Foreground" Value="#FFC5B88F"/>
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="SelectionBrush" Value="#FFCA3029"/>
			<Setter Property="CaretBrush" Value="#FFC5B88F"/>
		</Style>
    </Application.Resources>
</Application>
